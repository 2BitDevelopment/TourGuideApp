rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public read access for POI data (needed for your tour app)
    match /POIs/{document} {
      allow read: if true;
      allow write: if false;
    }
    
    // Analytics collections - write-only for app, read for admin
    match /website_views/{document} {
      allow read: if false; // Only Firebase Admin SDK can read
      allow write: if request.resource.data.keys().hasAll(['timestamp', 'sessionId'])
                   && request.resource.data.timestamp is timestamp;
    }
    
    match /map_views/{document} {
      allow read: if false;
      allow write:  request.resource.data.keys().hasAll(['timestamp', 'sessionId'])
                   && request.resource.data.timestamp is timestamp;
    }
    
    match /poi_views/{document} {
      allow read: if false;
      allow write:  request.resource.data.keys().hasAll(['timestamp', 'sessionId', 'poiId'])
                   && request.resource.data.timestamp is timestamp;
    }
    
    match /poi_clicks/{document} {
      allow read: if false;
      allow write:  request.resource.data.keys().hasAll(['timestamp', 'sessionId', 'poiId'])
                   && request.resource.data.timestamp is timestamp;
    }
    
    match /poi_interactions/{document} {
      allow read: if false;
      allow write:  request.resource.data.keys().hasAll(['timestamp', 'sessionId', 'poiId'])
                   && request.resource.data.timestamp is timestamp;
    }
    
    match /rate_limits/{document} {
      allow read: if false;
      allow write: if false; 
    }
  }
}